// 标签页切换功能
文件.addEventListener('DOMContentLoaded'，功能(){
Const navButtons=文件.querySelectorAll('.nav-btn')；
Const contentSections=文件.querySelectorAll('.content-section')；
            
navButtons.foreach(按钮=>{
按钮.addEventListener('单击'，功能(){
常量目标ID=这.getattribute('数据目标')；
                    
// 移除所有按钮的活动状态
navButtons.foreach(BTN=>BTN.classList.移除('活动'))；
// 隐藏所有内容区域
contentSections.foreach(部分=>部分.classList。移除('活动'))；
                    
// 添加当前按钮的活动状态
这.classList。添加('活动')；
// 显示目标内容区域
文件.getElementById(TargetID).classList。添加('活动')；
});
});
});
